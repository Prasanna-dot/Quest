<section class="container-fluid">
<div class="signup_text">Not a member? <%= link_to "Sign up now", signup_path %></div>
    <div class="row">
        <div class="col">
            <%= image_tag("login_img1.png") %>
        </div>
        <div class="col">
            <%= form_tag sessions_path do |form| %>
            <div class='field'>
                <%= label_tag :email %>
                <%= text_field_tag :email %>
            </div>
            <div class='field'>
                <div><%= label_tag :password %><%= link_to "Forgot password?", signup_path %></div>
                <%= password_field_tag :password %>
                <p id='alert'><%= alert %></p>
            </div>
            <div class='actions'>
                <%= submit_tag "Login" %>
            </div>
            <% end %>
        </div>
</section>
